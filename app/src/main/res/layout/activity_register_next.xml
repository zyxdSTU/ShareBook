<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title"/>

    <LinearLayout
        android:background="@drawable/background"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_margin="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"
                android:textSize="25sp"
                android:text="姓名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:paddingLeft="10dp"
                    android:id="@+id/name_editTextView"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </EditText>
                <View
                    android:layout_alignBottom="@id/name_editTextView"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee">
                </View>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_margin="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"
                android:textSize="25sp"
                android:text="学号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:paddingLeft="10dp"
                    android:id="@+id/id_editTextView"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </EditText>
                <View
                    android:layout_alignBottom="@id/id_editTextView"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee">
                </View>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"
                android:textSize="25sp"
                android:text="性别"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:paddingLeft="10dp"
                    android:id="@+id/sex_editTextView"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </EditText>
                <View
                    android:layout_alignBottom="@id/sex_editTextView"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee">
                </View>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="25dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"
                android:textSize="25sp"
                android:text="地址"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:paddingLeft="10dp"
                    android:id="@+id/address_editTextView"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </EditText>
                <View
                    android:layout_alignBottom="@id/address_editTextView"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee">
                </View>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"
                android:textSize="25sp"
                android:text="密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:paddingLeft="10dp"
                    android:id="@+id/password_editTextView"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </EditText>
                <View
                    android:layout_alignBottom="@id/password_editTextView"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee">
                </View>
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/register_button"
            android:layout_gravity="center_horizontal"
            android:background="#536DFE"
            android:text="注册"
            android:textColor="#ffffff"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
